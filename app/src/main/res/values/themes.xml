<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialYou" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary" >@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="themeColorPrimary" >@color/colorPrimary</item>
        <item name="themeColorFloatingButton" >@color/colorAccent</item>
        <item name="themeColorPrimaryVariant" >@color/mars_color_variant</item>
        <item name="textInputEditTextBackground" >@android:color/holo_blue_dark</item>
        <item name="themeChipStrokeColor" >@android:color/holo_blue_dark</item>
    </style>

    <style name="MarsStyle" parent="Theme.MaterialYou">
        <item name="colorPrimary">#882F06</item>
        <item name="android:colorPrimary">#882F06</item>
        <item name="colorPrimaryDark">@color/mars_color_variant</item>
        <item name="colorOnPrimary">#DFAB9A</item>
        <item name="colorSecondary">#DDC887</item>
        <item name="colorSecondaryVariant">#9C2118</item>
        <item name="colorOnSecondary">#350303</item>
        <item name="android:statusBarColor">?attr/themeColorPrimaryVariant</item>
        <item name="themeColorPrimary" >@color/mars_color</item>
        <item name="themeColorFloatingButton" >@color/mars_color_floating_button</item>
        <item name="themeColorPrimaryVariant" >@color/mars_color_variant</item>
        <item name="textInputEditTextBackground" >@android:color/darker_gray</item>
        <item name="themeChipStrokeColor" >@color/mars_color</item>
    </style>

    <style name="TitanStyle" parent="Theme.MaterialYou">
        <item name="colorPrimary">#9C27B0</item>
        <item name="android:colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#3F51B5</item>
        <item name="colorOnPrimary">#7E7B7A</item>
        <item name="colorSecondary">#28C7DC</item>
        <item name="colorSecondaryVariant">#280761</item>
        <item name="colorOnSecondary">#423535</item>
        <item name="android:statusBarColor">#DC1B0D</item>
        <item name="themeColorPrimary" >@color/titan_color</item>
        <item name="themeColorFloatingButton" >@color/titan_floating_button_color</item>
        <item name="themeColorPrimaryVariant" >@color/titan_color_variant</item>
        <item name="textInputEditTextBackground" >@android:color/white</item>
        <item name="themeChipStrokeColor" >@color/titan_color</item>

    </style>
</resources>